<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>URL Shortner</h1>
    <div>
        <form method="POST" action="/url">
            <label for="">Enter URL:</label>
            <input type="text" name="url" placeholder="Enter URL">
            <button type="submit">Shorten</button>
        </form>
        <% if(locals.id) {%>
            <p>Shortened URL is : http://localhost:1000/url/<%= id%></p>
            <%}
        %>
    </div>
    <div>
        <% if (locals.urls) { %>
         <table>
            <th>S.NO.</th>
            <th>ShortId</th>
            <th>Redirect To</th>
            <th>Clicks</th>
            <tbody>
                <% urls.forEach((url,indx) => { %>
                    <tr>
                 <td><%= indx+1 %></td>
                 <td><%= url.shortId %></td>
                 <td><%= url.redirectURL %></td>
                 <td><%= url.visitHistory.length %></td>
                </tr>
                 <% }) %>
            </tbody>
         </table>
        <% } %>
         
    </div>
</body>
</html>